NODE_ENV=development
PORT=4000
CORS_ORIGIN=http://localhost:5180
# Reserved for future SQL-backed persistence. Current backend storage is file-based in MEDIA_DIR.
DB_URL=postgresql://user:password@localhost:5432/autohub
API_PUBLIC_BASE_URL=http://localhost:4000
MEDIA_DIR=./storage
DISABLE_SMTP=true
ALLOW_DEV_OTP=true
# Production safety: must be false in production.
# ALLOW_DEV_OTP=false
ALLOW_OTP_CONSOLE_LOGS=false
OWNER_BOOTSTRAP_EMAIL=
OWNER_BOOTSTRAP_KEY=
# Required in production, use a strong random value (32+ chars).
AUTH_COOKIE_SIGNING_KEY=
# Production safety: do not use wildcard in production.
# CORS_ORIGIN=https://your-frontend-domain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="AutoHub Security <no-reply@localhost>"
